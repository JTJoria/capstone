<h1>Edit A Trip Mate!</h1>

<%= form_tag "/persons", method: :post do %>

  <div>
    <%=label_tag :name %>
    <%= text_field_tag :name %>
  </div>

   <div>
    <%=label_tag :gender %>
    <%= text_field_tag :gender %>
  </div>

   <div>
    <%=label_tag :age %>
    <%= text_field_tag :age %>
  </div>


<%= submit_tag "All Set!" %>

<%= link_to "Home", "/persons" %>

<%= link_to "Delete", "/persons/#{@person.id}", method: :delete, data:{confirm: "Are You Sure?"} %>

<% end %>