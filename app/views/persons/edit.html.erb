<div id="centered">
  <h1>Edit A Trip Mate!</h1>

  <%= form_for(@person, url: "/trips/#{@trip.id}/persons/#{@person.id}") do |p| %>

    <div>
      <%=p.label :name %>
      <%=p.text_field :name %>
    </div>

     <div>
      <%=p.label :gender %>
      <%=p.text_field :gender %>
    </div>

     <div>
      <%=p.label :age %>
      <%=p.text_field :age %>
    </div>

    <div>
      <%=p.label :email %>
      <%=p.text_field :email %>
    </div>


  <%= submit_tag "All Set!" %>

  <%= link_to "Delete", "/persons/#{@person.id}", method: :delete, data:{confirm: "Are You Sure?"} %>

  <% end %>
</div>