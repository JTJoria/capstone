<h1>Add a New Trip Mate!</h1>

      <div id="errors">
        <ul>
          <li ng-repeat="error in errors">{{error}}</li>
        </ul>
      </div> 

<%= form_tag "/persons", method: :post do %>

  <div>
    <%=label_tag :name %>
    <%= text_field_tag :name %>
  </div>

   <div>
    <%=label_tag :gender %>
    <%= text_field_tag :gender %>
  </div>

   <div>
    <%=label_tag :age %>
    <%= text_field_tag :age %>
  </div>



<%= submit_tag "Add This Person To Your Trip!" %>

<%= link_to "Home", "/persons" %>

<% end %>