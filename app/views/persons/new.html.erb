<div ng-app="app">

  <h1>Add a New Trip Mate!</h1>


  <%= form_tag "/persons", method: :post do %>

    <%= hidden_field_tag params[:trip_id] %>

    <div>
      <%=label_tag :name %>
      <%= text_field_tag :name %>
    </div>

     <div>
      <%=label_tag :gender %>
      <%= text_field_tag :gender %>
    </div>

     <div>
      <%=label_tag :age %>
      <%= text_field_tag :age %>
    </div>    

    <div>
      <%=label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    
    <div id="errors">
      <ul>
        <li ng-repeat="error in errors">{{ error }}</li>
      </ul>
    </div> 

</div>



<button ng-click="addPerson(newPerson)">Add This Person To Your Trip!</button>

<% end %>